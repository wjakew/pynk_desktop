{
  "name": "Pynk",
  "version": "1.0.0",
  "description": "Network monitoring and ping analysis desktop application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": ["network", "ping", "monitoring", "electron"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "electron-notification-state": "^1.0.0"
  },
  "build": {
    "appId": "com.pynk.desktop",
    "productName": "Pynk Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "src/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "src/icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "src/icon.png",
      "category": "Network;Utility"
    }
  }
}