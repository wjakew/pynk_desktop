{
  "name": "Pynk",
  "version": "1.0.0",
  "description": "Network monitoring and ping analysis desktop application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --disable-gpu",
    "build-win": "electron-packager . pynk --platform=win32 --arch=x64 --out=dist/ --overwrite",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-mac": "electron-builder --mac --universal"
  },  
  "keywords": [
    "network",
    "ping",
    "monitoring",
    "electron"
  ],
  "author": "Jakub Wawak",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "node-notifier": "^10.0.1"
  },
  "build": {
    "appId": "com.jakubwawak.pynk",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "src/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "src/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/icon.png"
    }
  }
}
